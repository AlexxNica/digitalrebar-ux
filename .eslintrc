{
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "angular": true,
    "$": true
  },
  "ecmaVersion": 6,
  "parser": "esprima",
  "extends": "eslint:recommended",
  "rules": {
    "quotes": ["error", "single"],
    "no-var": "warn",
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "eqeqeq": "warn",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-eq-null": "error",
    "no-eval": "error",
    "no-trailing-spaces": "warn",
    "no-useless-return": "warn",
    "max-len": ["error", 80]
  }
}